                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/pay10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/song10" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Burn it Down"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pay11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/song7" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Numb"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pay12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/song8" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Rise Up"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pay13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/song9" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Be Somebody"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pay14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/song10" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Burn it Down"
                                android:textStyle="bold" />
